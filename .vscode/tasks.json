{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build GTK App",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",
        "-o", "${fileDirname}/${fileBasenameNoExtension}",
        "$(pkg-config --cflags --libs gtk+-3.0)"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "C:\\msys64\\usr\\bin\\bash.exe",
          "args": ["-l", "-c"]
        }
      },
      "detail": "For GTK3 projects (requires pkg-config)"
    },
    {
      "label": "Build Test Program",
      "type": "shell",
      "command": "gcc",
      "args": [
        "test.c",
        "-o", "test.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "C:\\msys64\\usr\\bin\\bash.exe",
          "args": ["-l", "-c"]
        }
      },
      "detail": "Build independent test program"
    },
    {
      "label": "Build Main App",
      "type": "shell",
      "command": "gcc",
      "args": [
        "main.c", "simulator.c", "stats.c",
        "-o", "app",
        "$(pkg-config --cflags --libs gtk+-3.0)"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "C:\\msys64\\usr\\bin\\bash.exe",
          "args": ["-l", "-c"]
        }
      },
      "detail": "Build complete main application"
    }
  ]
}